{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false, // Allow emitting files
    "jsx": "react-jsx",

    /* Linting */
    "strict": false, // Disable strict type-checking
    "noUnusedLocals": false, // Allow unused local variables
    "noUnusedParameters": false, // Allow unused parameters
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmitOnError": false // Emit files even with errors
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
